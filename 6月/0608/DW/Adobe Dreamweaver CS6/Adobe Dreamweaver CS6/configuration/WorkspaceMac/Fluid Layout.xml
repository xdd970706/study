<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<panelset>

  <!-- default to App and Document maximized, but don't hard code sizes (code will compute) -->
  <application maximize="true" docView="design"/>
  <document maximize="true"/>

  <!-- RIGHT - Insert, CSS, Code, Application, Tag Inspector, Files, Frames (hidden), History (hidden) -->
  <panelframe dock="right" >
    <panelcontainer visible="false">
      <panel id="BL" />
    </panelcontainer>
    <panelcontainer expanded="true">
      <panel id="objects" showLabel="true" category="Layout"/>  <!-- show insert Fluid Grid object -->
    </panelcontainer>
    <panelcontainer>
      <panel id="css styles"/>
      <panel id="layers" visibleTab="false"/>
      <panel id="tag inspector" visibleTab="false"/>
    </panelcontainer>
    <panelcontainer visible="false">
      <panel id="BCModulePanel" height="370" />
    </panelcontainer>
    <panelcontainer visible="false">
      <panel id="database"/>
      <panel id="data sources"/>
      <panel id="server scripts"/>
      <panel id="server components" visibleTab="false"/>
    </panelcontainer>
    <panelcontainer expanded="false">
      <panel id="site"/>
      <panel id="assets"/>
      <panel id="snippets" visibleTab="false"/>
    </panelcontainer>
    <panelcontainer visible="false" >
      <panel id="frames"/>
    </panelcontainer>
    <panelcontainer visible="false" >
      <panel id="history"/>
    </panelcontainer>
  </panelframe>

  <!-- BOTTOM - Property Inspector, results (hidden) -->
  <panelframe dock="bottom">
    <panelcontainer>
      <panel id="propertiesMfc"/>
    </panelcontainer>
    <panelcontainer visible="false">
      <panel id="properties"/>
    </panelcontainer>
    <panelcontainer visible="false">
      <panel id="search"/>
      <panel id="reference"/>
      <panel id="validation"/>
      <panel id="btc"/>
      <panel id="linkchecker"/>
      <panel id="reports"/>
      <panel id="ftp log"/>
      <panel id="server debug"/>
    </panelcontainer>
   </panelframe>

  <!-- FLOATING, individuals don't need to be listed - default behavior...-->
</panelset>
